<%if is_edit%>
  <%action = cat_url(cat)%>
  <%button_text = "Update Cat"%>
<%else%>
  <%action = cats_url%>
  <%button_text = "Create Cat"%>
<%end%>

<form action="<%=action%>" method="POST">

  <%if is_edit%>
    <input type="hidden" name="_method" value="PATCH">
  <%end%>

  <label for="name">Name</label>
  <input type="text" name="cat[name]" id="name" value="<%=cat.name%>">
  <br>

  <label for="sex">Sex</label>
  M<input type="radio" name="cat[sex]" value="M" <%= cat.sex == 'M' ? "checked" : "" %>>
  F<input type="radio" name="cat[sex]" value="F" <%= cat.sex == 'F' ? "checked" : "" %>>
  <br>

  <label for="color">Color</label>
  <select name="cat[color]" id="color">
  <option value='-- select a color --' disabled='true' selected='true'>-- select a color --</option> 
  <option value="orange">Orange</option>
  <option value="yellow">Yellow</option>
  <option value="black">Black</option>
  <option value="mix">Mix</option>
  <option value="white">White</option>
  </select>
  <br>

  <label for="birth_date"> Birth Day</label>
  <input type="date" name="cat[birth_date]" id="birth_date" value="<%=cat.birth_date%>">
  <br>

  <label for="description">Description</label>
  <textarea name="cat[description]" id="description" cols="30" rows="10"><%=cat.description%></textarea>
  <br>

  <input type="submit" value="<%=button_text%>" >

</form>